<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/bgCityGif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/city"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/mainFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/life3">

        <FrameLayout
            android:id="@+id/gameFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/life3">

            <ImageView
                android:id="@+id/ivFish"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:src="@drawable/fish"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/ivLeaf"
                android:layout_width="45dp"
                android:layout_height="55dp"
                android:src="@drawable/leaf2"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/ivCan"
                android:layout_width="27dp"
                android:layout_height="57dp"
                android:src="@drawable/can"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/ivPaper"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/paper"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/ivChips"
                android:layout_width="43dp"
                android:layout_height="53dp"
                android:src="@drawable/chips2"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/ivBanana"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/bbb"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/ivMilk"
                android:layout_width="37dp"
                android:layout_height="65dp"
                android:src="@drawable/milkkk"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/ivTire"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/tire2"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/ivTissue"
                android:layout_width="38dp"
                android:layout_height="58dp"
                android:src="@drawable/tissue"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/ivPlastic"
                android:layout_width="42dp"
                android:layout_height="62dp"
                android:src="@drawable/plastic"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/ivCork"
                android:layout_width="28dp"
                android:layout_height="45dp"
                android:src="@drawable/cork"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/ivStyro"
                android:layout_width="43dp"
                android:layout_height="45dp"
                android:src="@drawable/styro"
                android:visibility="invisible" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/plusPoints"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/plusfive"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/black"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/bombb"
                android:visibility="invisible" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/plusLife"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/heartgifff"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/trash"
                android:layout_width="110dp"
                android:layout_height="105dp"
                android:layout_gravity="bottom"
                android:src="@drawable/rightbio"
                android:visibility="invisible" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/lifeTwoGif"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="748dp"
                android:src="@drawable/lifetwo"
                android:visibility="invisible" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/lifeThreeGif"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="748dp"
                android:src="@drawable/lifethree"
                android:visibility="invisible" />

        </FrameLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="94dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/picPause"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:clickable="true"
                android:onClick="pausePushed"
                android:visibility="invisible"
                app:srcCompat="@drawable/pausebitch"
                tools:ignore="OnClick" />

            <TextView
                android:id="@+id/scoreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textSize="36sp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/heart5"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/heart4"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/earth" />

            <ImageView
                android:id="@+id/heart4"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_toStartOf="@+id/heart3"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/earth" />

            <ImageView
                android:id="@+id/heart3"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/earth" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/instructionsFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.ViewPager
                android:id="@+id/slideViewPager"
                android:layout_width="match_parent"
                android:layout_height="594dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="59dp">

            </android.support.v4.view.ViewPager>

            <LinearLayout
                android:id="@+id/dotsLayout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="54dp"
                android:orientation="horizontal">

            </LinearLayout>

            <ImageView
                android:id="@+id/nextBtn"
                android:layout_width="139dp"
                android:layout_height="62dp"
                android:layout_above="@+id/dotsLayout"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:src="@drawable/donee"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/chooserLayout"
            android:layout_width="match_parent"
            android:layout_height="515dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/picChoose"
                android:layout_width="295dp"
                android:layout_height="36dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="180dp"
                android:src="@drawable/chooser"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/picBio"
                android:layout_width="118dp"
                android:layout_height="167dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="70dp"
                android:layout_marginStart="66dp"
                android:clickable="true"
                android:src="@drawable/rightbio" />

            <ImageView
                android:id="@+id/picNonBio"
                android:layout_width="118dp"
                android:layout_height="167dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/picBio"
                android:layout_marginEnd="70dp"
                android:clickable="true"
                android:src="@drawable/leftnonb" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/startLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifJunk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/junk"
                android:visibility="visible" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifKeyboard"
                android:layout_width="251dp"
                android:layout_height="170dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="137dp"
                android:src="@drawable/run"
                android:visibility="visible" />

            <TextView
                android:id="@+id/highScoreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gifJunk"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="BEST:"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/scoreShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/highScoreLabel"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="Score: "
                android:textSize="24sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/picRetry"
                android:layout_width="150dp"
                android:layout_height="64dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="190dp"
                android:visibility="gone"
                app:srcCompat="@drawable/retry" />

            <ImageView
                android:id="@+id/picExit"
                android:layout_width="148dp"
                android:layout_height="33dp"
                android:layout_alignTop="@+id/picAbout"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                app:srcCompat="@drawable/exit" />

            <ImageView
                android:id="@+id/picStart"
                android:layout_width="186dp"
                android:layout_height="28dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="206dp"
                android:clickable="true"
                android:src="@drawable/startbtns" />

            <ImageView
                android:id="@+id/picAchievements"
                android:layout_width="323dp"
                android:layout_height="38dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="86dp"
                android:clickable="true"
                android:src="@drawable/achievements" />

            <ImageView
                android:id="@+id/picAbout"
                android:layout_width="205dp"
                android:layout_height="28dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="147dp"
                android:clickable="true"
                android:src="@drawable/aboutuss" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pauseConfirmationLayout"
            android:layout_width="183dp"
            android:layout_height="92dp"
            android:layout_gravity="center_vertical|center"
            android:background="@color/colorWhite"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center">

                <ImageView
                    android:id="@+id/btnRestart"
                    android:layout_width="75dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@drawable/retrybitch" />

                <ImageView
                    android:id="@+id/btnPlay"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@drawable/playbitch" />

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/exitConfirmLayout"
            android:layout_width="match_parent"
            android:layout_height="293dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/areyou"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="286dp"
                android:layout_height="72dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="17dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnNo"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@drawable/nobtn" />

                <ImageView
                    android:id="@+id/btnYes"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@drawable/yesbtn" />


            </LinearLayout>


        </RelativeLayout>


    </FrameLayout>

</LinearLayout>